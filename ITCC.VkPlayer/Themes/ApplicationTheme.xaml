<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:windows="clr-namespace:ITCC.VkPlayer.UI.Windows">

    <Style TargetType="Control" />

    <Style TargetType="Grid">
        <Style.Setters>

        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="Name" Value="MainGrid" />
        </Style.Triggers>

    </Style>
    <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="TextBox">
        <Setter Property="Margin" Value="10,0,10,0" />
    </Style>

    <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="PasswordBox" />
    <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="Label">
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="Button">
        <Setter Property="MinWidth" Value="80" />
        <Setter Property="MinHeight" Value="25" />
        <Setter Property="Margin" Value="10,10,10,10" />
    </Style>

    <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="ComboBox">
        <Setter Property="Margin" Value="10,10,10,0" />
    </Style>

    <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="DataGrid" />


    <Style BasedOn="{StaticResource {x:Type Window}}" TargetType="windows:LoginWindow" />

</ResourceDictionary>